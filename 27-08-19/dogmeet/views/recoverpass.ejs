<% include header %>
<title>Dog Mate</title>
</head>
<link rel="stylesheet" type="text/css" href="/assets/search.css">
<link rel="stylesheet" type="text/css" href="/assets/style.css">
<body>
  <div class="container mt-5">
    <div class="row">
      <div class="col-sm-12" style="border: 0.005vw solid grey;background-color: rgb(250,250,250);padding:15px;">
        <% console.log("page: ",page) %>
          <% if(typeof page !== "undefined") { if( page != 1 && page != 2 && page != 4) { %>
            <form class="" action="/recoverpass" method="post" enctype="multipart/form-data">
              <div class="md-form mb-5 inline1">
                <div class="row">
                  <div class="col-md-3"></div>
                  <div class="col-md-6">
                    <span class="recover"> Please Enter Your Email Id:</span>
                    <label data-error="wrong" data-success="right" for="defaultForm-email"></label>
                    <div class="input-group">
                      <input type="email" name="emailadd" id="loginemail" class="form-control validate input1" placeholder="Email Address">
                      <div class="input-group-append">
                        <span class="fas fa-envelope prefix grey-text formicons"></span>
                      </div>
                    </div>
                    <span class="underline1"></span>
                    <span id="emailerr" class="err red2"><% if(typeof error !== "undefined") { if( typeof error.emailerr !== "undefined") { %><%- error.emailerr %> <% }} %></span>
                  </div>
                  <div class="col-md-3"></div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-5"></div>
                <div class="col-md-2">
                  <button type="submit" class="btn" style="background-color: rgb(99, 203, 191); color: white; border-radius: 30px; width: 100%;">Check</button>
                </div>
                <div class="col-md-5"></div>
              </div>
            </form>
          <% } else if( page == 1) { %>
            <form class="" action="/recoverpass/check?check=<%= mail %>&id=<%= hash%>" method="post" enctype="multipart/form-data">
              <div class="md-form mb-5 inline1">
                <div class="row">
                  <div class="col-md-3"></div>
                  <div class="col-md-6">
                    <label data-error="wrong" data-success="right" for="defaultForm-email">Password</label>
                    <div class="input-group">
                      <input type="password" name="u_pass" id="loginemail" class="form-control validate input1" placeholder="New Password">
                      <div class="input-group-append">
                        <span class="fas fa-lock prefix grey-text formicons"></span>
                      </div>
                    </div>
                    <span class="underline1"></span>
                    <span id="u_pass_err" class="err red2"><%if (typeof error.u_pass_err !== "undefined"){ %> <%= error.u_pass_err %> <% } %></span>
                  </div>
                  <div class="col-md-3"></div>
                </div>
              </div>
              <div class="md-form mb-5 inline1">
                <div class="row">
                  <div class="col-md-3"></div>
                  <div class="col-md-6">
                    <label data-error="wrong" data-success="right" for="defaultForm-email">Confirm Password</label>
                    <div class="input-group">
                      <input type="password" name="u_cpass" id="loginemail" class="form-control validate input1" placeholder="Confirm New Password">
                      <div class="input-group-append">
                        <span class="fas fa-lock prefix grey-text formicons"></span>
                      </div>
                    </div>
                    <span class="underline1"></span>
                    <span id="cpasserr" class="err red2"></span>
                  </div>
                  <div class="col-md-3"></div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-5"></div>
                <div class="col-md-2">
                  <button type="submit" class="btn" style="background-color: rgb(99, 203, 191); color: white; border-radius: 30px; width: 100%;">Submit</button>
                </div>
                <div class="col-md-5"><input type="hidden" value="<%= mail %>" name="mail"></div>
              </div>
            </form>
          <% } else if(page == 2) { %>
            <span> Your Password has been Changed, Please try to <a href="/?signin"> Login </a> Or go to our <a href="/">Home Page</a></span>
          <% } else if(page == 4) { %>
            <span> Sorry, Your Link Has Expired. Please <a href="/recoverpass"> Enter Your Email </a> To Generate New Link. </span>
          <% } } %>
      </div>
    </div>
  </div>
