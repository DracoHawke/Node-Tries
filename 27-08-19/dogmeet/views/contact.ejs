<% include header %>
<link rel="stylesheet" type="text/css" href="assets/style.css">
<link rel="stylesheet" type="text/css" href="assets/signup.css">
<title>DogMate</title>
</head>
<body class="scrollbar scrollbar-primary">
  <% if(response!=''){ %>
    <div class="alert alert-success" style="margin: auto;">
      <strong>Message Sent !!</strong> We have Recieved your message and we will reply Shortly..
    </div>
  <% } %>
  <% include navigation %>
  <div class="container">
    <div class="row">
    <div class="col-sm-8">
    <div class="row" style="margin-top:1vw;margin-bottom:1vw;">
        <div class="col-sm-12 col-md-12 col-lg-12 size-1 font-weight-bold pl-0">
          <a href="/" class="red ">Home</a>&nbsp;/&nbsp;Contact Us
        </div>

	<div class="col-sm-12 col-md-12 col-lg-12 size-1 font-weight-bold pl-0" style="line-height:2">
        <span class=" registeration-head" style="border-bottom: solid rgb(236, 54, 100) 2px;">Co</span><span class=" registeration-head">tact</span><span class=" registeration-head" style="border:0;"> Us</span></div>
        <div class="col-sm-8 mt-3 pl-0">
      <form class="mt-3" method="post" action="" name="myform" onsubmit="return contact_form()">
        <div class="form-group row contact-form">
          <div class="col-sm-12">
          <label for="fname" class="col-sm-12 col-form-label pl-0 pr-0"><strong>Full Name<span class="red">*</span></strong></label>
            <div class="col-sm-12 pl-0 pr-0">
              <input type="text" class="form-control size-1" name="name" id="name" value="" placeholder="Enter Your Full Name Here" >
			  <span class="red" id="name_err" style="font-size: smaller;"><%= error.name %></span>
          </div></div></div>
              <div class="form-group row contact-form"><div class="col-sm-12">
            <label for="Email" class="col-sm-12 col-form-label pl-0 pr-0"><strong>Email<span class="red">*</span></strong></label>
            <div class="col-sm-12 pl-0 pr-0">
              <input type="text" class="form-control size-1" name="email" id="email" value="" placeholder="Enter Email" >
			  <span class="red" id="email_err" style="font-size: smaller;"><%= error.email %></span>
            </div>
          </div></div>
          <div class="form-group row contact-form">
            <div class="col-sm-12">
              <label for="text" class="col-sm-12 col-form-label pl-0 pr-0"><strong>Message<span class="red">*</span></strong></label>
              <div class="col-sm-12 pl-0 pr-0">
                <textarea name="message" placeholder="Your Message" rows="4" style="width:100%;border:1px solid #ced4da;"></textarea>
				<span class="red" id="mess_err" style="font-size: smaller;"><%= error.message %></span>
              </div></div></div>
              <div class="form-group row contact-form">
                <div class="col-sm-12 ">
                  <button type="submit" id="contact_formbtn1" class="btn custom-btn size-1 mt-4 mb-3 " style="font-size:1em;padding-left:0.5rem;padding-right:0.5rem;width:10em"><i class="fas fa-paper-plane"></i>&nbsp;Send</button>
                </div>
              </div>
      </form>
      </div>
    </div></div>
    <div class="registraion-image col-sm-4">
      <img src="/assets/images/img-6842.jpg" style="width:100%;height:100%;" alt="">
    </div>
  </div></div>
  <% include footer %>
</body>
</html>
