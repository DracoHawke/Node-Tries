<% include header %>
<link rel="stylesheet" type="text/css" href="assets/style.css">
<link rel="stylesheet" type="text/css" href="assets/search.css">
<title>DogMate</title>
</head>
<body>
  <% include navigation %>
  <div class="jumbotron jumbo">
    <div class="heading">
        FIND A SITTER
    </div>
  <form>
  <div class="input-group search-bar">
  <input type="text" class="form-control" name="Location" placeholder="Location">
  <input type="text" class="form-control" name="name" placeholder="Search">
  <button class="btn" type="submit" name="button">&nbsp;<i class="fas fa-search"></i>&nbsp;</button>
</div>
</form>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <br><h2>TOP RATED SITTERS</h2><br>
      </div>
      <% for(var i=0;i<rows.length;i++){
        if(rows[i].Email!=rows.u_mail){
        %>
      <div class="col-sm-3">
          <a href="/sitterdetails?id=<%= rows[i].Email %>"><img class="profile" src="<%= rows[i].Profile %>"></a>
          <div class="row">
              <div class="col-sm-12 fname">
                <%= rows[i].Fname %> <%= rows[i].Lname %>
              </div>
              <div class="col-sm-6 rating">
                <%
                if((rows[i].Rating*2)%2!=0){ rows[i].Rating=rows[i].Rating-1;}
                for(var j=0;j<rows[i].Rating;j++){
                   %>
                <span class="fa fa-star checked"></span>
                <% }
                if((rows[i].Rating*2)%2==1){%>
                  <i class="fas fa-star-half-alt checked"></i>
                  <% j=j+1;}
                for(var k=0;k<5-j;k++){
                %>
                <span class="far fa-star" style="color:#ed2154"></span>
              <% }%>
              </div>
              <div class="col-sm-6 review">
                <i class="fas fa-vote-yea"></i>&nbsp;<%= rows[i].Reviews %>
              </div>
          </div>
      </div>
      <% }} %>
    </div>
  </div>
  <% include footer %>
</body>
</html>
