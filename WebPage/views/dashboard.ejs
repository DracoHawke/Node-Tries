<% include header %>
<link rel="stylesheet" type="text/css" href="assets/style.css">
<link rel="stylesheet" type="text/css" href="assets/signup.css">
<link rel="stylesheet" type="text/css" href="assets/dashboard.css">
<title>DogMate</title>
</head>
<body>
  <% include navigation %>
  <div class="container-fluid pricing">
    <div class="container">
    <% if(send_data.status_err=='not ver')
        { %>
          <h2 class="red">Please Verify Your email to Access This Feature......</h2>
    <%  }
      else{ %>
        <div class="row">
          <div class="col-sm-3  col-md-3 col-lg-3 menu-card">
              <div class="row">
                <div class="col-12 menu myacc">
                  <a class="for_ajax myacc" href="/myacc" active><i class='fas fa-user-alt'></i>&nbsp;&nbsp;My Account</a>
                </div>
                <div class="col-12 menu chat">
                  <a class="for_ajax chat" href="/chat"><i class='fas fa-comment-alt'></i>&nbsp;&nbsp;Chat</a>
                </div>
                <div class="col-12 menu settings">
                  <a class="for_ajax settings" href="/settings"><i class='fas fa-user-cog'></i>&nbsp;&nbsp;Settings</a>
                </div>
              </div>
          </div>
      <div class="col-sm-9  col-md-9 col-lg-9 dashboard_lay" id="list">
        <div class="row">
          <div class="col-sm-12 col-md-12 col-lg-12">
            <h2 class="my-account">MY ACCOUNT</h2>
          </div>
        </div>
        <form class="size-1 dashboard_form" name="myform" method="post" onsubmit="return update()">
          Profile Picture<span class="red" >*</span>
        <div class="form-group row">
            <label for="file-upload" class="col-sm-2 col-form-label"><img class="image_profile" id="imageload" src="<% if(send_data.Profile==''){ %>assets/images/profile.png<%} else{ %><%= send_data.Profile %><% }%>" ></label>
              <div class="col-sm-9">
                <input hidden type="file" style="width:1%;height:1%;" class="form-control size-1" name="fileUpload" id="file-upload" accept="image/*" value="<%=  send_data.Profile %>" onchange="loadFile(event)">
                <span class="red"><%= error.file_err %></span>
              </div></div>
              <% if(sid==1){ %>
              <div class="form-group row">
                <label for="fname" class="col-sm-12 col-form-label" value="<%= send_data.Description %>">About Me<span class="red">*</span></label>
                  <div class="col-sm-12">
                    <textarea name="aboutme" class="form-control size-1" rows="3"><%= send_data.Description %></textarea>
                    <span class="red"><%= error.about_err %></span>
                  </div>
                </div><% } %>
        <div class="form-group row">
          <div class="col-sm-6">
            <div class="col-sm-12">
              <label for="fname" class="col-form-label">First Name<span class="red">*</span></label>
              <input type="text" class="form-control size-1" name="fname" id="name" value="<%= send_data.Fname %>" placeholder="Enter Your First Name Here" >
              <span class="red"><%= error.fname_err %></span>
            </div></div>
            <div class="col-sm-6">
              <div class="col-sm-12">
                <label for="lname" class="col-form-label">Last Name<span class="red">*</span></label>
                <input type="text" class="form-control size-1" name="lname" value="<%= send_data.Lname %>" placeholder="Enter Your Last Name Here">
                <span class="red"><%= error.lname_err %></span>
              </div></div>
          </div>
          <div class="form-group row">
            <div class="col-sm-6">
            <div class="col-sm-12">
              <label for="Email" class="col-form-label">Email<span class="red">*</span></label>
              <input type="text" class="form-control size-1" name="email" id="email" value="<%= send_data.Email %>" placeholder="Enter Email">
              <span class="red"><%= error.email_err %></span>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="col-sm-12">
              <label for="Phone" class="col-form-label">Phone<span class="red">*</span></label>
              <input type="text" class="form-control size-1" name="phone" value="<%= send_data.Phone %>" placeholder="Enter Phone">
              <span class="red"><%= error.phone_err %></span>
            </div>
          </div></div>
          <div class="form-group row">
            <div class="col-sm-6">
              <div class="row">
            <div class="col-sm-11">
              <label for="inputPassword" class=" col-form-label">Password<span class="red">*</span></label>
              <input type="password" class="form-control size-1" name="password" placeholder="Enter Password">
              <span class="red"><%= error.password_err %></span>
            </div>
            <div class="col-sm-1">
              <br><br>
              <a data-toggle="tooltip" data-placement="right" title="The Password must be minimum 1 Capital letter,1 Small letter,1 Special Character,1 Number and there should be no trailing numbers in the password eg. 123,456 etc.    "><i class="red fas fa-info-circle"></i></a>
            </div></div>
            <script>
            $(document).ready(function(){
              $('[data-toggle="tooltip"]').tooltip();
            });
            </script>
          </div>
          <div class="col-sm-6">
            <div class="col-sm-12">
              <label for="confirmPassword" class=" col-form-label">Confirm Password<span class="red">*</span></label>
              <input type="password" name="confirmPass" class="form-control size-1" id="inputPassword" placeholder="Re-enter the above Password">
              <span class="red"><%= error.confirm_err %></span>
            </div>
          </div></div>
          <% if(sid==1){ %>
          <div class="form-group row">
            <div class="col-sm-6">
              <div class="col-sm-12">
            <label for="dob" class="col-form-label">DOB<span class="red">*</span></label>
              <input type="date" class="form-control size-1" name="dob" placeholder="Date of birth" value="<%= send_data.DOB %>">
              <span class="red"><%= error.dob_err %></span>
            </div>
          </div></div><% } %>
          <div class="form-group row">
            <div class="col-sm-6">
              <div class="col-sm-5">
                <label for="pack" class="col-sm-4 col-form-label"></label>
                <button type="submiit" class="btn custom-btn size-1 mt-4" style="width:100%;">Update</button>
            </div></div>
            </div>
        </form>
        </div>
        </div>
        <% } %>
    </div>
  </div>
  <% include footer %>
</body>
</html>
